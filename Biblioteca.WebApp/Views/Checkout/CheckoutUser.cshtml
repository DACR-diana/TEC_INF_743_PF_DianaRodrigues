
@{
    Layout = "_Layout";

    var nome = ViewBag.ClientName;

    var estado = "A decorrer";

    var checkout = Model[0];


    if (checkout.DeliveryDate != null)
    {
        estado = "Encerrado";

    }
    else if (checkout.ExpectedDate < DateTime.Now)
    {
        estado = "Multa aplicada";
    }
  
}

<div class="row">
    <div class="col-12">
        <div class="card card-warning" style="margin-top:20px">
            <div class="card-header">
                <div class="card-title">
                    Checkout #@checkout.Id
                </div>
            </div>
        </div>


        <div class="invoice p-3 mb-3">
            <div class="row">
                <div class="col-12">
                    <h4>
                        <i class="fas fa-book"></i> @nome
                    </h4>
                </div>
            </div>
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <address>
                        Estado:<strong> @estado </strong><br>
                        Data Requisição: <strong> @checkout.Date </strong><br>
                        Data Pagamento: <strong> @checkout.DeliveryDate </strong> <br>
                        Data Entrega: <strong> @checkout.ExpectedDate </strong><br />
                    </address>
                </div>

            </div>
            <div class="row">
                <div class="col-12 table-responsive">
                    <table id="example2" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id Livro</th>
                                <th>Titulo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var checkoutBook in checkout.CheckoutBooks)
                            {
                                <tr>
                                    <td>@checkoutBook.Book.Id</td>
                                    <td>@checkoutBook.Book.Title</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->

            </div>

            <div class="row">
                <!-- /.col -->
                <div class="col-6">
                    <p class="lead">Detalhes</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Multa:</th>
                                @*@if (Model.Value.DeliveryDate != null)
                                    {
                                        <td><span class="badge bg-primary">0</span></td>
                                    }
                                    else if (Model.Value.ExpectedDate < DateTime.Now)
                                    {
                                        <td> <span class="badge bg-danger">Multa Aplicada</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge bg-success">A decorrer</span></td>
                                    }*@
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row no-print">
                <div class="col-12">

                    @if (estado != "Encerrado")
                    {
                        <button type="button" class="btn btn-success float-right">
                            <i class="far fa-credit-card"></i> Encerrar Checkout
                        </button>
                    }

                    <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                        <i class="fas fa-envelope-square"></i> Enviar Email
                    </button>
                </div>
            </div>
        </div>
        <!-- /.invoice -->
    </div><!-- /.col -->
</div>
